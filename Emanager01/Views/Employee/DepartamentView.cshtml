@model IEnumerable<Employee>


<div class="header">


    @using (Html.BeginForm("DepartamentView", "Employee", FormMethod.Post, new { @class = "departament-select" }))
    {

        <select name="departaments" class="form-control">
            <option value="Sales" selected="selected">Sales</option>
            <option value="Marketing">Marketing</option>
            <option value="Finance">Finance</option>
            <option value="Research and Development">Research and Development</option>
            <option value="Human Resource Management">Human Resource Management</option>
            <option value="Production">Production</option>
        </select>
        <br />
        <br />


        <button type="submit" value="Login" class="btn btn-light" id="submit">Search</button>
    }

    <br />
    <br />
    <br />


</div>

<div class="text-center">



    @if (Model.Any())
    {
        <table cellpadding="0" cellspacing="0" class="table" style="width:50%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Departament</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Contract</th>
                    <!-- <th>Remarks</th>-->
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>


            @foreach (Employee employee in Model)
            {

                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.DateOfBirth.ToString("yyyy/MM/dd")</td>
                    <td>@employee.Position</td>
                    <td>@employee.Email</td>
                    <td>@employee.Gender</td>
                    <td>@employee.Phone</td>
                    <th><a type="button" class="btn btn-light" href="@Url.Action("AddressView", "Employee", employee)">Address</a></th>
                    <th><a type="button" class="btn btn-light" href="@Url.Action("ContractView", "Employee", employee)">Contract</a></th>
                    <!--<th><a type="button" class="btn btn-light" href="Url.Action("", "", employee)">Remarks</a></th>-->
                    <th><a type="button" class="btn btn-warning" href="@Url.Action("EditEmployee", "Employee", employee)">Edit</a></th>
                    <th><a type="button" class="btn btn-danger" href="@Url.Action("DeleteEmployee", "Employee", employee)">Delete</a></th>
                </tr>

            }





        </table>

    }
    else
    {

        <h1>Seclect a departament</h1>

    }



    <br />
    <br />

    <div class="depInfo">
        
        <hr />
        <br />

        <h3>Departament Information</h3>

        <br />
        <table cellpadding="0" cellspacing="0" class="table depTable" style="width:50%">
           
            <thead>
                <tr>
                    <th>Sales</th>
                    <th>Finance</th>
                    <th>Production</th>
                    <th>HRM</th>
                    <th>Research and dev</th>
                    <th>Departament 6</th>
                </tr>
            </thead>

            <tr>
                <td>0.00%</td>
                <td>--</td>
                <td>--</td>
                <td>--</td>
                <td>--</td>
                <td>--</td>
            </tr>


        </table>

    </div>


</div>